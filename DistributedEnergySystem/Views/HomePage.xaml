<pages:BasePage x:Class="DistributedEnergySystem.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:DistributedEnergySystem"
      xmlns:pages="clr-namespace:DistributedEnergySystem.Pages"
      xmlns:vm="clr-namespace:DistributedEnergySystem.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1024"
      Title="系统总览">

    <Page.DataContext>
        <vm:MainWindowViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <!-- 定义渐变画刷 -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F1419" Offset="0"/>
            <GradientStop Color="#1A2332" Offset="0.3"/>
            <GradientStop Color="#0F1419" Offset="0.7"/>
            <GradientStop Color="#0A0E14" Offset="1"/>
        </LinearGradientBrush>

        <!-- 模块背景渐变 -->
        <LinearGradientBrush x:Key="ModuleBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2D3748" Offset="0"/>
            <GradientStop Color="#1A202C" Offset="1"/>
        </LinearGradientBrush>

        <!-- 中央区域背景渐变 -->
        <RadialGradientBrush x:Key="CenterBackground">
            <RadialGradientBrush.GradientStops>
                <GradientStop Color="#1F2937" Offset="0"/>
                <GradientStop Color="#111827" Offset="1"/>
            </RadialGradientBrush.GradientStops>
        </RadialGradientBrush>

        <!-- 强调色渐变 -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>

        <!-- 状态栏背景 -->
        <LinearGradientBrush x:Key="StatusBarBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1F2937" Offset="0"/>
            <GradientStop Color="#111827" Offset="1"/>
        </LinearGradientBrush>

        <!-- 迷你趋势图样式 -->
        <Style x:Key="MiniTrendChart" TargetType="Border">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A1A1A" Offset="0"/>
                        <GradientStop Color="#0A0A0A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="5" ShadowDepth="1" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 渐变进度条样式 -->
        <Style x:Key="GradientProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="12"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border x:Name="TemplateRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect x:Name="GlowEffect"
                                                Color="{TemplateBinding Foreground}"
                                                BlurRadius="10"
                                                ShadowDepth="0"
                                                Opacity="0.8"/>
                            </Border.Effect>
                            <Grid x:Name="PART_Track">
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="6"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 玻璃态背景效果 -->
        <Style x:Key="GlassBorderStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#20FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#05FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 玻璃态模块样式 -->
        <Style x:Key="GlassModuleStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#402D3748" Offset="0"/>
                        <GradientStop Color="#251A202C" Offset="0.5"/>
                        <GradientStop Color="#151A202C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#60374151" Offset="0"/>
                        <GradientStop Color="#40253140" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 玻璃态中央区域样式 -->
        <Style x:Key="GlassCenterStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush>
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#501F2937" Offset="0"/>
                            <GradientStop Color="#3015181E" Offset="0.7"/>
                            <GradientStop Color="#200A0E14" Offset="1"/>
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#70374151" Offset="0"/>
                        <GradientStop Color="#40253140" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="8" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 数值变化动画样式 -->
        <Style x:Key="AnimatedTextBlock" TargetType="TextBlock">
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 功率数值特别动画样式 -->
        <Style x:Key="PowerTextBlock" TargetType="TextBlock" BasedOn="{StaticResource AnimatedTextBlock}">
        </Style>

        <!-- 运行状态的呼吸灯效果 -->
        <Style x:Key="StatusBreathingDot" TargetType="Border">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <!-- 太阳图标 - 光伏模块 -->
        <Viewbox x:Key="SunIcon" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center">
            <Canvas Width="24" Height="24">
                <!-- 太阳中心 -->
                <Ellipse Fill="#F59E0B" Width="12" Height="12" Canvas.Left="6" Canvas.Top="6"/>
                <!-- 光芒 -->
                <Path Fill="#F59E0B" Data="M 12,2 L 14,6 L 12,4 L 10,6 Z M 22,12 L 18,14 L 20,12 L 18,10 Z M 12,22 L 10,18 L 12,20 L 14,18 Z M 2,12 L 6,10 L 4,12 L 6,14 Z"/>
                <Path Fill="#F59E0B" Data="M 18,6 L 16,8 L 18,8 L 20,6 Z M 18,18 L 20,16 L 18,16 L 16,18 Z M 6,18 L 8,20 L 8,18 L 6,16 Z M 6,6 L 4,8 L 6,8 L 8,6 Z"/>
            </Canvas>
        </Viewbox>

        <!-- 风力图标 - 风电模块 -->
        <Viewbox x:Key="WindIcon" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center">
            <Canvas Width="24" Height="24">
                <!-- 风机叶片 -->
                <Path Fill="#3B82F6" Data="M 12,12 C 12,12 8,8 6,4 C 8,6 12,6 16,4 C 14,6 12,10 12,12 C 12,12 16,8 20,6 C 18,8 14,10 12,12 C 12,12 16,14 20,18 C 16,16 12,14 12,12 C 12,12 12,16 14,20 C 12,18 10,14 12,12 C 12,12 8,14 4,18 C 6,16 10,14 12,12 C 12,12 8,10 4,6 C 8,8 12,10 12,12 Z"/>
                <!-- 中心圆 -->
                <Ellipse Fill="#2563EB" Width="4" Height="4" Canvas.Left="10" Canvas.Top="10"/>
            </Canvas>
        </Viewbox>

        <!-- 电池图标 - 电池模块 -->
        <Viewbox x:Key="BatteryIcon" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center">
            <Canvas Width="24" Height="24">
                <!-- 电池主体 -->
                <Rectangle Fill="#10B981" Width="18" Height="10" Canvas.Left="3" Canvas.Top="7" RadiusX="1" RadiusY="1"/>
                <!-- 电池正极 -->
                <Rectangle Fill="#10B981" Width="2" Height="4" Canvas.Left="21" Canvas.Top="10"/>
                <!-- 电量指示 -->
                <Rectangle Fill="#065F46" Width="14" Height="6" Canvas.Left="5" Canvas.Top="9" x:Name="BatteryLevel"/>
            </Canvas>
        </Viewbox>

        <!-- 发电机图标 -->
        <Viewbox x:Key="GeneratorIcon" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center">
            <Canvas Width="24" Height="24">
                <!-- 发电机主体 -->
                <Rectangle Fill="#8B5CF6" Width="16" Height="12" Canvas.Left="4" Canvas.Top="6" RadiusX="2" RadiusY="2"/>
                <!-- 线圈 -->
                <Ellipse Stroke="#FFFFFF" StrokeThickness="1.5" Width="8" Height="8" Canvas.Left="8" Canvas.Top="8"/>
                <!-- 闪电符号 -->
                <Path Fill="#FFFFFF" Data="M 11,6 L 9,10 L 11,10 L 10,14 L 14,9 L 12,9 L 13,6 Z"/>
            </Canvas>
        </Viewbox>

        <!-- 电源图标 - AC输出 -->
        <Viewbox x:Key="PowerIcon" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center">
            <Canvas Width="24" Height="24">
                <!-- 插头主体 -->
                <Rectangle Fill="#F97316" Width="12" Height="8" Canvas.Left="6" Canvas.Top="8" RadiusX="1" RadiusY="1"/>
                <!-- 插脚 -->
                <Rectangle Fill="#F97316" Width="2" Height="6" Canvas.Left="8" Canvas.Top="2"/>
                <Rectangle Fill="#F97316" Width="2" Height="6" Canvas.Left="14" Canvas.Top="2"/>
                <!-- 电波 -->
                <Path Stroke="#F97316" StrokeThickness="1.5" Data="M 2,16 Q 6,14 10,16 T 18,16"/>
                <Path Stroke="#F97316" StrokeThickness="1.5" Data="M 4,19 Q 8,17 12,19 T 20,19"/>
            </Canvas>
        </Viewbox>
    </Page.Resources>

    <Grid>
        <!-- 背景装饰网格 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F1419" Offset="0"/>
                <GradientStop Color="#1A2332" Offset="0.3"/>
                <GradientStop Color="#0F1419" Offset="0.7"/>
                <GradientStop Color="#0A0E14" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 使用ViewBox让整个Canvas布局自动居中 -->
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Width="1350" Height="700">
                <!-- 定义中央区域的大小和位置 -->
                <Canvas.Resources>
                    <Style x:Key="ModuleStyle" TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource ModuleBackground}"/>
                        <Setter Property="CornerRadius" Value="15"/>
                        <Setter Property="BorderBrush" Value="#374151"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Canvas.Resources>

                <!-- 玻璃态背景装饰 -->
                <Border Canvas.Top="0"
                        Width="1350" Height="700"
                        Style="{StaticResource GlassBorderStyle}"
                        Opacity="0.2"
                        Panel.ZIndex="1"
                        IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- 中央产品渲染图区域 -->
                <Border Canvas.Left="425" Canvas.Top="250"
                        Width="500" Height="440"
                        Style="{StaticResource GlassCenterStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 产品渲染图区域 -->
                        <Border Grid.Row="1" Background="#0F1419" CornerRadius="10" Margin="20">
                            <TextBlock Text="产品图片展示区域"
                                       FontSize="18"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- 系统参数汇总 -->
                        <Grid Grid.Row="2" Margin="20,15,20,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="工作模式" FontSize="12" Foreground="#9CA3AF"/>
                                <TextBlock Text="自动模式" FontSize="14" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="系统温度" FontSize="12" Foreground="#9CA3AF"/>
                                <TextBlock Text="35°C" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="总功率" FontSize="12" Foreground="#9CA3AF"/>
                                <TextBlock Text="156.8 kW" FontSize="14" FontWeight="Bold" Foreground="#F59E0B"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="运行状态" FontSize="12" Foreground="#9CA3AF"/>
                                <TextBlock Text="正常运行" FontSize="14" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 顶部：光伏参数模块 - 最重要的模块，放在最上面 -->
                <Border Canvas.Left="485" Canvas.Top="15"
                        Width="380" Height="230"
                        Style="{StaticResource GlassModuleStyle}">
                    <!-- Grid用于内部布局管理 -->
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <!-- Auto: 自动高度，根据内容确定 -->
                            <RowDefinition Height="Auto"/>
                            <!-- *: 占用剩余空间 -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 标题 - Grid.Row="0" 第一行 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <ContentControl Content="{StaticResource SunIcon}"/>
                            <TextBlock Text="光伏发电"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>

                        <!-- 参数显示区域 - Grid.Row="1" 参数部分 -->
                        <Grid Grid.Row="1">
                            <!-- 分成左右两列 -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左列：基本参数 -->
                            <StackPanel Grid.Column="0">
                                <!-- StackPanel垂直排列控件 -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <!-- Orientation="Horizontal" 水平排列 -->
                                    <TextBlock Text="电压:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                    <!-- Width固定35像素，对齐美观 -->
                                    <TextBlock Text="{Binding SolarPower.VoltageDisplay, NotifyOnTargetUpdated=True}"
                                               FontSize="11" FontWeight="SemiBold"
                                               Style="{StaticResource AnimatedTextBlock}"/>
                                    <!-- Binding是WPF的核心，数据绑定到ViewModel的SolarPower.VoltageDisplay属性 -->
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="电流:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                    <TextBlock Text="{Binding SolarPower.CurrentDisplay, NotifyOnTargetUpdated=True}"
                                               FontSize="11" FontWeight="SemiBold"
                                               Style="{StaticResource AnimatedTextBlock}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 右列：功率和进度条 -->
                            <StackPanel Grid.Column="1">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="功率:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                    <TextBlock Text="{Binding SolarPower.PowerDisplay, NotifyOnTargetUpdated=True}"
                                               FontSize="11" FontWeight="SemiBold"
                                               Foreground="#F59E0B"
                                               Style="{StaticResource PowerTextBlock}"/>
                                </StackPanel>

                                <!-- 进度条显示功率百分比 -->
                                <Grid Margin="0,3">
                                    <TextBlock Text="{Binding SolarPower.PowerPercentage, StringFormat=\{0:F0\}%}"
                                               FontSize="9"
                                               Foreground="White"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,0,0,2"
                                               Style="{StaticResource AnimatedTextBlock}"/>
                                    <ProgressBar Value="{Binding SolarPower.PowerPercentage, NotifyOnTargetUpdated=True}"
                                                 Maximum="100"
                                                 Style="{StaticResource GradientProgressBar}"
                                                 Foreground="#F59E0B"
                                                 Margin="0,12,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!-- 趋势图标题 - Grid.Row="2" -->
                        <TextBlock Grid.Row="2" Text="实时功率趋势"
                                   FontSize="10" Foreground="#9CA3AF"
                                   Margin="0,10,0,5" HorizontalAlignment="Left"/>

                        <!-- 趋势图区域 - Grid.Row="3" -->
                        <Border Grid.Row="3" Style="{StaticResource MiniTrendChart}"
                                x:Name="SolarTrendCanvas">
                            <Grid>
                                <!-- 网格线 -->
                                <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="15" X2="260" Y2="15"/>
                                <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="30" X2="260" Y2="30"/>
                                <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="45" X2="260" Y2="45"/>

                                <!-- 坐标轴 -->
                                <Line Stroke="#6B7280" StrokeThickness="1" X1="20" Y1="10" X2="20" Y2="50"/>
                                <Line Stroke="#6B7280" StrokeThickness="1" X1="20" Y1="50" X2="260" Y2="50"/>

                                <!-- 功率曲线 -->
                                <Polyline x:Name="SolarPowerLine"
                                          Points="20,45 60,35 100,25 140,20 180,15 220,18 260,22"
                                          Stroke="#F59E0B"
                                          StrokeThickness="2"
                                          Fill="Transparent"
                                          StrokeLineJoin="Round">
                                    <Polyline.Effect>
                                        <DropShadowEffect Color="#F59E0B" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </Polyline.Effect>
                                </Polyline>

                                <!-- 发光效果 -->
                                <Polyline x:Name="SolarPowerGlow"
                                          Points="20,45 60,35 100,25 140,20 180,15 220,18 260,22"
                                          Stroke="#F59E0B"
                                          StrokeThickness="6"
                                          Fill="Transparent"
                                          Opacity="0.2"
                                          StrokeLineJoin="Round"/>
                            </Grid>
                        </Border>

                        <!-- 状态显示 - Grid.Row="4" 底部 -->
                        <Border Grid.Row="4" Background="#1F2937" CornerRadius="8" Padding="8,4" Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Border Style="{StaticResource StatusBreathingDot}"
                                       Background="#10B981"
                                       VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding SolarPower.StatusText}"
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="#10B981"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- 左上：风电参数模块 -->
                <Border Canvas.Left="70" Canvas.Top="105"
                        Width="330" Height="240"
                        Style="{StaticResource GlassModuleStyle}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <ContentControl Content="{StaticResource WindIcon}"/>
                            <TextBlock Text="风力发电"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>

                        <!-- 参数显示区域 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左列：基本参数 -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="电压:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                    <TextBlock Text="{Binding WindPower.VoltageDisplay, NotifyOnTargetUpdated=True}"
                                               FontSize="11" FontWeight="SemiBold"
                                               Style="{StaticResource AnimatedTextBlock}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="电流:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                    <TextBlock Text="{Binding WindPower.CurrentDisplay, NotifyOnTargetUpdated=True}"
                                               FontSize="11" FontWeight="SemiBold"
                                               Style="{StaticResource AnimatedTextBlock}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 右列：功率和进度条 -->
                            <StackPanel Grid.Column="1">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="功率:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                    <TextBlock Text="{Binding WindPower.PowerDisplay, NotifyOnTargetUpdated=True}"
                                               FontSize="11" FontWeight="SemiBold"
                                               Foreground="#3B82F6"
                                               Style="{StaticResource PowerTextBlock}"/>
                                </StackPanel>

                                <!-- 进度条显示功率百分比 -->
                                <Grid Margin="0,3">
                                    <TextBlock Text="{Binding WindPower.PowerPercentage, StringFormat=\{0:F0\}%}"
                                               FontSize="9"
                                               Foreground="White"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,0,0,2"
                                               Style="{StaticResource AnimatedTextBlock}"/>
                                    <ProgressBar Value="{Binding WindPower.PowerPercentage, NotifyOnTargetUpdated=True}"
                                                 Maximum="100"
