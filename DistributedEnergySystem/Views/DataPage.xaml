<Page x:Class="DistributedEnergySystem.Views.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1024"
      Title="DataPage">

    <Grid Background="#1E1E1E">
        <!-- 数据页面标题 -->
        <TextBlock Text="数据统计"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,50,0,0"/>

        <!-- 数据内容占位区域 -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="数据统计页面内容待开发"
                       FontSize="18"
                       Foreground="#888"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="• 光伏输入数据统计"
                       FontSize="14"
                       Foreground="#666"
                       Margin="0,20,0,5"/>
            <TextBlock Text="• 电网输入数据统计"
                       FontSize="14"
                       Foreground="#666"
                       Margin="0,5,0,5"/>
            <TextBlock Text="• 负载输出数据统计"
                       FontSize="14"
                       Foreground="#666"
                       Margin="0,5,0,5"/>
            <TextBlock Text="• 卖电数据统计"
                       FontSize="14"
                       Foreground="#666"
                       Margin="0,5,0,5"/>
            <TextBlock Text="• 充放电量统计"
                       FontSize="14"
                       Foreground="#666"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Page>