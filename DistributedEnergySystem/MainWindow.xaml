                                        <TextBlock Text="电流:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                        <TextBlock Text="{Binding Battery.CurrentDisplay}" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- 右列：SOC和温度 -->
                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="SOC:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                        <TextBlock Text="{Binding Battery.SocDisplay, NotifyOnTargetUpdated=True}"
                                                   Style="{StaticResource SOCTextBlock}"
                                                   Foreground="{Binding Battery.SocColor}"/>
                                    </StackPanel>

                                    <!-- SOC 进度条 -->
                                    <Grid Margin="0,3">
                                        <TextBlock Text="{Binding Battery.Soc, StringFormat={}{0:F0}%}"
                                                   FontSize="9"
                                                   Foreground="White"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,0,0,2"
                                                   Style="{StaticResource AnimatedTextBlock}"/>
                                        <ProgressBar Value="{Binding Battery.Soc, NotifyOnTargetUpdated=True}"
                                                     Maximum="100"
                                                     Style="{StaticResource GradientProgressBar}"
                                                     Foreground="{Binding Battery.SocColor}"
                                                     Margin="0,12,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- 趋势图标题 -->
                            <TextBlock Grid.Row="2" Text="SOC变化趋势"
                                       FontSize="10" Foreground="#9CA3AF"
                                       Margin="0,10,0,5" HorizontalAlignment="Left"/>

                            <!-- 趋势图区域 -->
                            <Border Grid.Row="3" Style="{StaticResource MiniTrendChart}">
                                <Grid>
                                    <!-- 网格线 -->
                                    <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="15" X2="260" Y2="15"/>
                                    <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="30" X2="260" Y2="30"/>
                                    <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="45" X2="260" Y2="45"/>

                                    <!-- 坐标轴 -->
                                    <Line Stroke="#6B7280" StrokeThickness="1" X1="20" Y1="10" X2="20" Y2="50"/>
                                    <Line Stroke="#6B7280" StrokeThickness="1" X1="20" Y1="50" X2="260" Y2="50"/>

                                    <!-- SOC曲线 -->
                                    <Polyline Points="20,25 60,22 100,20 140,18 180,15 220,12 260,10"
                                              Stroke="#10B981"
                                              StrokeThickness="2"
                                              Fill="Transparent"
                                              StrokeLineJoin="Round">
                                        <Polyline.Effect>
                                            <DropShadowEffect Color="#10B981" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                        </Polyline.Effect>
                                    </Polyline>

                                    <!-- 发光效果 -->
                                    <Polyline Points="20,25 60,22 100,20 140,18 180,15 220,12 260,10"
                                              Stroke="#10B981"
                                              StrokeThickness="6"
                                              Fill="Transparent"
                                              Opacity="0.2"
                                              StrokeLineJoin="Round"/>
                                </Grid>
                            </Border>

                            <!-- 状态显示 -->
                            <Border Grid.Row="4" Background="#1F2937" CornerRadius="8" Padding="8,4" Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource StatusBreathingDot}"
                                           Background="#10B981"
                                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Battery.StatusText}"
                                               FontSize="10" FontWeight="SemiBold"
                                               Foreground="{Binding Battery.StatusColor}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- 右下：AC输出参数模块 -->
                    <Border Canvas.Left="950" Canvas.Top="445"
                            Width="330" Height="240"
                            Style="{StaticResource GlassModuleStyle}">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <ContentControl Content="{StaticResource PowerIcon}"/>
                                <TextBlock Text="并网输出"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </StackPanel>

                            <!-- 参数显示区域 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 左列：基本参数 -->
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="电压:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                        <TextBlock Text="{Binding ACOutput.VoltageDisplay}" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="电流:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                        <TextBlock Text="{Binding ACOutput.CurrentDisplay}" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- 右列：功率和频率 -->
                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="功率:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                        <TextBlock Text="{Binding ACOutput.PowerDisplay}" FontSize="11" FontWeight="SemiBold" Foreground="#F97316"/>
                                    </StackPanel>

                                    <!-- 频率显示 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="频率:" FontSize="11" Foreground="#9CA3AF" Width="35"/>
                                        <TextBlock Text="{Binding ACOutput.FrequencyDisplay}" FontSize="11" FontWeight="SemiBold" Foreground="#F97316"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <!-- 趋势图标题 -->
                            <TextBlock Grid.Row="2" Text="输出功率趋势"
                                       FontSize="10" Foreground="#9CA3AF"
                                       Margin="0,10,0,5" HorizontalAlignment="Left"/>

                            <!-- 趋势图区域 -->
                            <Border Grid.Row="3" Style="{StaticResource MiniTrendChart}">
                                <Grid>
                                    <!-- 网格线 -->
                                    <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="15" X2="260" Y2="15"/>
                                    <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="30" X2="260" Y2="30"/>
                                    <Line Stroke="#374151" StrokeThickness="0.5" X1="20" Y1="45" X2="260" Y2="45"/>

                                    <!-- 坐标轴 -->
                                    <Line Stroke="#6B7280" StrokeThickness="1" X1="20" Y1="10" X2="20" Y2="50"/>
                                    <Line Stroke="#6B7280" StrokeThickness="1" X1="20" Y1="50" X2="260" Y2="50"/>

                                    <!-- 功率曲线 -->
                                    <Polyline Points="20,40 60,35 100,30 140,25 180,22 220,20 260,18"
                                              Stroke="#F97316"
                                              StrokeThickness="2"
                                              Fill="Transparent"
                                              StrokeLineJoin="Round">
                                        <Polyline.Effect>
                                            <DropShadowEffect Color="#F97316" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                        </Polyline.Effect>
                                    </Polyline>

                                    <!-- 发光效果 -->
                                    <Polyline Points="20,40 60,35 100,30 140,25 180,22 220,20 260,18"
                                              Stroke="#F97316"
                                              StrokeThickness="6"
                                              Fill="Transparent"
                                              Opacity="0.2"
                                              StrokeLineJoin="Round"/>
                                </Grid>
                            </Border>

                            <!-- 状态显示 -->
                            <Border Grid.Row="4" Background="#1F2937" CornerRadius="8" Padding="8,4" Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource StatusBreathingDot}"
                                           Background="#F97316"
                                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding ACOutput.StatusText}"
                                               FontSize="10" FontWeight="SemiBold"
                                               Foreground="#10B981"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Canvas>
            </Viewbox>
        </Grid>

        <!-- 底部导航栏 (第2行) -->
        <Grid Grid.Row="2" Background="{StaticResource StatusBarBackground}">
            <Grid.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="-2" Opacity="0.3"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 导航按钮 -->
            <Button Grid.Column="0" Content="🏠 系统总览" Style="{StaticResource NavButtonStyle}" Margin="20,10,5,10"/>
            <Button Grid.Column="1" Content="⚙️ 系统设置" Style="{StaticResource NavButtonStyle}" Margin="5,10"/>
            <Button Grid.Column="2" Content="📊 数据分析" Style="{StaticResource NavButtonStyle}" Margin="5,10"/>
            <Button Grid.Column="3" Content="📈 运行记录" Style="{StaticResource NavButtonStyle}" Margin="5,10"/>
            <Button Grid.Column="4" Content="❓ 帮助中心" Style="{StaticResource NavButtonStyle}" Margin="5,10,20,10"/>
        </Grid>
    </Grid>
</Window>