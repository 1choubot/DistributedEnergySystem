<Window x:Class="DistributedEnergySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DistributedEnergySystem"
        xmlns:vm="clr-namespace:DistributedEnergySystem.ViewModels"
        xmlns:conv="clr-namespace:DistributedEnergySystem.Converters"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:ctrl="clr-namespace:DistributedEnergySystem.Controls"
        mc:Ignorable="d"
        Title="分布式能源管理系统"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1E1E1E">

    <!-- 设置数据上下文 - 这是连接View和ViewModel的桥梁 -->
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- 定义渐变画刷 -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F1419" Offset="0"/>
            <GradientStop Color="#1A2332" Offset="0.3"/>
            <GradientStop Color="#0F1419" Offset="0.7"/>
            <GradientStop Color="#0A0E14" Offset="1"/>
        </LinearGradientBrush>

        <!-- 模块背景渐变 -->
        <LinearGradientBrush x:Key="ModuleBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2D3748" Offset="0"/>
            <GradientStop Color="#1A202C" Offset="1"/>
        </LinearGradientBrush>

        <!-- 中央区域背景渐变 -->
        <RadialGradientBrush x:Key="CenterBackground">
            <RadialGradientBrush.GradientStops>
                <GradientStop Color="#1F2937" Offset="0"/>
                <GradientStop Color="#111827" Offset="1"/>
            </RadialGradientBrush.GradientStops>
        </RadialGradientBrush>

        <!-- 强调色渐变 -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>

        <!-- 状态栏背景 - 增强层次感 -->
        <LinearGradientBrush x:Key="StatusBarBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#2D3748" Offset="0"/>
            <GradientStop Color="#1A202C" Offset="0.5"/>
            <GradientStop Color="#0F1419" Offset="1"/>
        </LinearGradientBrush>

        <!-- 状态栏玻璃态效果 -->
        <Style x:Key="StatusBarGlassEffect" TargetType="Border">
            <Setter Property="Background" Value="#2D3748"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="0,0.5,0,0"/>
        </Style>

        <!-- 迷你趋势图样式 -->
        <Style x:Key="MiniTrendChart" TargetType="Border">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A1A1A" Offset="0"/>
                        <GradientStop Color="#0A0A0A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="5" ShadowDepth="1" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 渐变进度条样式 -->
        <Style x:Key="GradientProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="12"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border x:Name="TemplateRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect x:Name="GlowEffect"
                                                Color="{TemplateBinding Foreground}"
                                                BlurRadius="10"
                                                ShadowDepth="0"
                                                Opacity="0.8"/>
                            </Border.Effect>
                            <Grid x:Name="PART_Track">
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="6"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 能源模块通用样式 -->
        <Style x:Key="EnergyModuleStyle" TargetType="Border">
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="440"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E293B" Offset="0"/>
                        <GradientStop Color="#0F172A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 呼吸灯动画样式 -->
        <Style x:Key="BreathingDot" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Fill" Value="#10B981"/>
        </Style>

        <!-- 运行状态的呼吸灯效果 -->
        <Style x:Key="StatusBreathingDot" TargetType="Border">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <!-- 数值变化动画样式 -->
        <Style x:Key="AnimatedTextBlock" TargetType="TextBlock">
            <Setter Property="TextBlock.Foreground" Value="White"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 功率数值特别动画样式 -->
        <Style x:Key="PowerTextBlock" TargetType="TextBlock" BasedOn="{StaticResource AnimatedTextBlock}">
        </Style>

        <!-- SOC特别动画样式 -->
        <Style x:Key="SOCTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 进度条动画样式 -->
        <Style x:Key="AnimatedProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource GradientProgressBar}">
        </Style>

        <!-- 玻璃态背景效果 -->
        <Style x:Key="GlassBorderStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#20FFFFFF" Offset="0"/>
                        <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#05FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 专业图标样式 -->
        <Style x:Key="ProfessionalIcon" TargetType="Viewbox">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform Angle="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                From="0" To="360" Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 太阳图标 - 光伏模块 -->
        <Viewbox x:Key="SunIcon" Style="{StaticResource ProfessionalIcon}">
            <Canvas Width="24" Height="24">
                <!-- 太阳中心 -->
                <Ellipse Fill="#F59E0B" Width="12" Height="12" Canvas.Left="6" Canvas.Top="6"/>
                <!-- 光芒 -->
                <Path Fill="#F59E0B" Data="M 12,2 L 14,6 L 12,4 L 10,6 Z M 22,12 L 18,14 L 20,12 L 18,10 Z M 12,22 L 10,18 L 12,20 L 14,18 Z M 2,12 L 6,10 L 4,12 L 6,14 Z"/>
                <Path Fill="#F59E0B" Data="M 18,6 L 16,8 L 18,8 L 20,6 Z M 18,18 L 20,16 L 18,16 L 16,18 Z M 6,18 L 8,20 L 8,18 L 6,16 Z M 6,6 L 4,8 L 6,8 L 8,6 Z"/>
            </Canvas>
        </Viewbox>

        <!-- 风力图标 - 风电模块 -->
        <Viewbox x:Key="WindIcon" Style="{StaticResource ProfessionalIcon}">
            <Canvas Width="24" Height="24">
                <!-- 风机叶片 -->
                <Path Fill="#3B82F6" Data="M 12,12 C 12,12 8,8 6,4 C 8,6 12,6 16,4 C 14,6 12,10 12,12 C 12,12 16,8 20,6 C 18,8 14,10 12,12 C 12,12 16,14 20,18 C 16,16 12,14 12,12 C 12,12 12,16 14,20 C 12,18 10,14 12,12 C 12,12 8,14 4,18 C 6,16 10,14 12,12 C 12,12 8,10 4,6 C 8,8 12,10 12,12 Z"/>
                <!-- 中心圆 -->
                <Ellipse Fill="#2563EB" Width="4" Height="4" Canvas.Left="10" Canvas.Top="10"/>
            </Canvas>
        </Viewbox>

        <!-- 电池图标 - 电池模块 -->
        <Viewbox x:Key="BatteryIcon" Style="{StaticResource ProfessionalIcon}">
            <Canvas Width="24" Height="24">
                <!-- 电池主体 -->
                <Rectangle Fill="#10B981" Width="18" Height="10" Canvas.Left="3" Canvas.Top="7" RadiusX="1" RadiusY="1"/>
                <!-- 电池正极 -->
                <Rectangle Fill="#10B981" Width="2" Height="4" Canvas.Left="21" Canvas.Top="10"/>
                <!-- 电量指示 -->
                <Rectangle Fill="#065F46" Width="14" Height="6" Canvas.Left="5" Canvas.Top="9" x:Name="BatteryLevel"/>
            </Canvas>
        </Viewbox>

        <!-- 发电机图标 -->
        <Viewbox x:Key="GeneratorIcon" Style="{StaticResource ProfessionalIcon}">
            <Canvas Width="24" Height="24">
                <!-- 发电机主体 -->
                <Rectangle Fill="#8B5CF6" Width="16" Height="12" Canvas.Left="4" Canvas.Top="6" RadiusX="2" RadiusY="2"/>
                <!-- 线圈 -->
                <Ellipse Stroke="#FFFFFF" StrokeThickness="1.5" Width="8" Height="8" Canvas.Left="8" Canvas.Top="8"/>
                <!-- 闪电符号 -->
                <Path Fill="#FFFFFF" Data="M 11,6 L 9,10 L 11,10 L 10,14 L 14,9 L 12,9 L 13,6 Z"/>
            </Canvas>
        </Viewbox>

        <!-- 电源图标 - AC输出 -->
        <Viewbox x:Key="PowerIcon" Style="{StaticResource ProfessionalIcon}">
            <Canvas Width="24" Height="24">
                <!-- 插头主体 -->
                <Rectangle Fill="#F97316" Width="12" Height="8" Canvas.Left="6" Canvas.Top="8" RadiusX="1" RadiusY="1"/>
                <!-- 插脚 -->
                <Rectangle Fill="#F97316" Width="2" Height="6" Canvas.Left="8" Canvas.Top="2"/>
                <Rectangle Fill="#F97316" Width="2" Height="6" Canvas.Left="14" Canvas.Top="2"/>
                <!-- 电波 -->
                <Path Stroke="#F97316" StrokeThickness="1.5" Data="M 2,16 Q 6,14 10,16 T 18,16"/>
                <Path Stroke="#F97316" StrokeThickness="1.5" Data="M 4,19 Q 8,17 12,19 T 20,19"/>
            </Canvas>
        </Viewbox>

        <!-- 玻璃态模块样式 -->
        <Style x:Key="GlassModuleStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#402D3748" Offset="0"/>
                        <GradientStop Color="#251A202C" Offset="0.5"/>
                        <GradientStop Color="#151A202C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#60374151" Offset="0"/>
                        <GradientStop Color="#40253140" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 玻璃态中央区域样式 -->
        <Style x:Key="GlassCenterStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush>
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Color="#501F2937" Offset="0"/>
                            <GradientStop Color="#3015181E" Offset="0.7"/>
                            <GradientStop Color="#200A0E14" Offset="1"/>
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#70374151" Offset="0"/>
                        <GradientStop Color="#40253140" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="8" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 按钮样式定义 -->
            <!-- 状态图标样式 - 适配32x32图标 -->
        <Style x:Key="StatusButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                        To="0.9" Duration="0:0:0.1" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                        To="0.9" Duration="0:0:0.1" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 导航栏毛玻璃背景 -->
        <LinearGradientBrush x:Key="NavigationBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E61A1F2E" Offset="0"/>
            <GradientStop Color="#F20F1419" Offset="1"/>
        </LinearGradientBrush>

        <!-- 导航栏玻璃态效果 -->
        <Style x:Key="NavigationGlassStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#301A1F2E" Offset="0"/>
                        <GradientStop Color="#200F1419" Offset="0.5"/>
                        <GradientStop Color="#150A0E14" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 导航图标资源 -->
        <Viewbox x:Key="HomeIcon" Width="24" Height="24">
            <Canvas Width="24" Height="24">
                <Path Fill="#FFFFFF" Data="M 12,2 L 2,12 L 6,12 L 6,20 L 10,20 L 10,14 L 14,14 L 14,20 L 18,20 L 18,12 L 22,12 L 12,2 Z"/>
            </Canvas>
        </Viewbox>

        <Viewbox x:Key="DataAnalysisIcon" Width="24" Height="24">
            <Canvas Width="24" Height="24">
                <Rectangle Fill="#FFFFFF" Width="3" Height="12" Canvas.Left="3" Canvas.Top="10"/>
                <Rectangle Fill="#FFFFFF" Width="3" Height="18" Canvas.Left="8" Canvas.Top="4"/>
                <Rectangle Fill="#FFFFFF" Width="3" Height="8" Canvas.Left="13" Canvas.Top="14"/>
                <Rectangle Fill="#FFFFFF" Width="3" Height="15" Canvas.Left="18" Canvas.Top="7"/>
            </Canvas>
        </Viewbox>

        <Viewbox x:Key="SettingsIcon" Width="24" Height="24">
            <Canvas Width="24" Height="24">
                <Path Fill="#FFFFFF" Data="M 12,15.5 A 3.5,3.5 0 0,1 8.5,12 A 3.5,3.5 0 0,1 12,8.5 A 3.5,3.5 0 0,1 15.5,12 A 3.5,3.5 0 0,1 12,15.5 M 19.43,12.97 C 19.47,12.65 19.5,12.33 19.5,12 C 19.5,11.67 19.47,11.34 19.43,11.03 L 21.54,9.37 C 21.73,9.22 21.78,8.95 21.66,8.73 L 19.66,5.27 C 19.54,5.05 19.27,4.96 19.05,5.05 L 16.56,6.05 C 16.04,5.66 15.5,5.32 14.87,5.07 L 14.5,2.42 C 14.46,2.18 14.25,2 14,2 L 10,2 C 9.75,2 9.54,2.18 9.5,2.42 L 9.13,5.07 C 8.5,5.32 7.96,5.66 7.44,6.05 L 4.95,5.05 C 4.73,4.96 4.46,5.05 4.34,5.27 L 2.34,8.73 C 2.21,8.95 2.27,9.22 2.46,9.37 L 4.57,11.03 C 4.53,11.34 4.5,11.67 4.5,12 C 4.5,12.33 4.53,12.65 4.57,12.97 L 2.46,14.63 C 2.27,14.78 2.21,15.05 2.34,15.27 L 4.34,18.73 C 4.46,18.95 4.73,19.03 4.95,18.95 L 7.44,17.94 C 7.96,18.34 8.5,18.68 9.13,18.93 L 9.5,21.58 C 9.54,21.82 9.75,22 10,22 L 14,22 C 14.25,22 14.46,21.82 14.5,21.58 L 14.87,18.93 C 15.5,18.67 16.04,18.34 16.56,17.94 L 19.05,18.95 C 19.27,19.03 19.54,18.95 19.66,18.73 L 21.66,15.27 C 21.78,15.05 21.73,14.78 21.54,14.63 L 19.43,12.97 Z"/>
            </Canvas>
        </Viewbox>

        <Viewbox x:Key="RunRecordsIcon" Width="24" Height="24">
            <Canvas Width="24" Height="24">
                <Path Fill="#FFFFFF" Stroke="#FFFFFF" StrokeThickness="1.5" Data="M 3,3 L 21,3 L 21,21 L 3,21 Z M 7,7 L 17,7 M 7,12 L 17,12 M 7,17 L 13,17"/>
            </Canvas>
        </Viewbox>

        <Viewbox x:Key="HelpIcon" Width="24" Height="24">
            <Canvas Width="24" Height="24">
                <Path Fill="#FFFFFF" Data="M 12,2 C 17.52,2 22,6.48 22,12 C 22,17.52 17.52,22 12,22 C 6.48,22 2,17.52 2,12 C 2,6.48 6.48,2 12,2 M 13,17 L 11,17 L 11,19 L 13,19 L 13,17 M 13,13 L 11,13 C 11,10 15,10 15,8 C 15,6.9 14.1,6 13,6 C 12.45,6 11.95,6.22 11.59,6.59 C 11.22,6.95 11,7.45 11,8 L 9,8 C 9,6.34 10.34,5 12,5 C 13.66,5 15,6.34 15,8 C 15,11 13,11 13,13 Z"/>
            </Canvas>
        </Viewbox>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Margin" Value="5,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="Transparent">
                            <Border.Effect>
                                <DropShadowEffect Color="Transparent" BlurRadius="0" ShadowDepth="0"/>
                            </Border.Effect>
                            <ContentPresenter ContentSource="Content"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 悬停状态 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#374151"/>
                            </Trigger>

                            <!-- 按下状态 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#4B5563"/>
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="37.5" CenterY="32.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 活动导航按钮样式 -->
        <Style x:Key="ActiveNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>

        <!-- 模块样式 -->
        <Style x:Key="ModuleStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ModuleBackground}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                          To="#10B981" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                          To="#374151" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- 发光效果样式 -->
        <Style x:Key="GlowingModuleStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ModuleBackground}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentGradient}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10B981" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 蓝牙图标 - 优化设计 -->
        <Canvas x:Key="BluetoothIcon" Width="32" Height="32">
            <!-- 蓝牙logo背景圆 -->
            <Ellipse Stroke="#60A5FA" StrokeThickness="2" Fill="#60A5FA" Opacity="0.1" Width="28" Height="28" Canvas.Left="2" Canvas.Top="2"/>
            <!-- 蓝牙logo主体 - 更清晰的线条 -->
            <Path Stroke="#60A5FA" StrokeThickness="2.5" Fill="Transparent" StrokeLineJoin="Round">
                <Path.Data>
                    <PathGeometry>
                        <!-- 垂直主线 -->
                        M16 6 L16 26
                        <!-- 左上斜线 -->
                        M11 11 L16 6
                        <!-- 左下斜线 -->
                        M11 21 L16 26
                        <!-- 右上斜线 -->
                        M21 11 L16 6
                        <!-- 右中横线 -->
                        M21 16 L11 16
                        <!-- 右下斜线 -->
                        M21 21 L16 26
                    </PathGeometry>
                </Path.Data>
            </Path>
            <!-- 连接点装饰 -->
            <Ellipse Fill="#60A5FA" Width="4" Height="4" Canvas.Left="14" Canvas.Top="14"/>
        </Canvas>

        <!-- 警报声音图标 - 简化喇叭 -->
        <Canvas x:Key="AlarmSoundIcon" Width="32" Height="32">
            <!-- 喇叭主体 -->
            <Path Stroke="#F59E0B" StrokeThickness="3" Fill="#F59E0B">
                <Path.Data>
                    <PathGeometry>
                        M6 12 L10 12 L16 6 L16 26 L10 20 L6 20 Z
                    </PathGeometry>
                </Path.Data>
            </Path>
            <!-- 声波 -->
            <Path Stroke="#F59E0B" StrokeThickness="2" Fill="Transparent">
                <Path.Data>
                    <PathGeometry>
                        M20 10 Q24 16 20 22
                        M24 6 Q30 16 24 26
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>

        <!-- 系统通知图标 - 信封设计 -->
        <Canvas x:Key="NotificationIcon" Width="32" Height="32">
            <!-- 信封背景 -->
            <Path Stroke="#60A5FA" StrokeThickness="2" Fill="#60A5FA" Opacity="0.1">
                <Path.Data>
                    <PathGeometry>
                        M4 8 L4 24 Q4 26 6 26 L26 26 Q28 26 28 24 L28 8 Q28 6 26 6 L6 6 Q4 6 4 8 Z
                    </PathGeometry>
                </Path.Data>
            </Path>
            <!-- 信封轮廓 -->
            <Path Stroke="#60A5FA" StrokeThickness="2" Fill="Transparent">
                <Path.Data>
                    <PathGeometry>
                        M4 8 L4 24 Q4 26 6 26 L26 26 Q28 26 28 24 L28 8 Q28 6 26 6 L6 6 Q4 6 4 8 Z
                    </PathGeometry>
                </Path.Data>
            </Path>
            <!-- 信封翻盖 -->
            <Path Stroke="#60A5FA" StrokeThickness="2" Fill="Transparent">
                <Path.Data>
                    <PathGeometry>
                        M4 8 L16 16 L28 8
                    </PathGeometry>
                </Path.Data>
            </Path>
            <!-- 未读消息指示器 -->
            <Ellipse Fill="#EF4444" Width="8" Height="8" Canvas.Left="22" Canvas.Top="4"/>
            <Ellipse Fill="White" Width="4" Height="4" Canvas.Left="24" Canvas.Top="6"/>
        </Canvas>

        <!-- 网络连接图标 - WiFi信号 -->
        <Canvas x:Key="NetworkIcon" Width="32" Height="32">
            <Path Stroke="#10B981" StrokeThickness="2.5" Fill="Transparent">
                <Path.Data>
                    <PathGeometry>
                        M6 20 L6 28
                        M12 16 L12 28
                        M18 12 L18 28
                        M24 8 L24 28
                    </PathGeometry>
                </Path.Data>
            </Path>
        </Canvas>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Grid.RowDefinitions>
            <!-- 顶部状态栏 -->
            <RowDefinition Height="70"/>
            <!-- 主内容区域 -->
            <RowDefinition Height="*"/>
            <!-- 底部导航栏 -->
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <!-- 顶部状态栏 (第0行) - 增强设计 -->
        <Border Grid.Row="0" Style="{StaticResource StatusBarGlassEffect}">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧时间和标题 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                    <!-- 应用图标 -->
                    <Border Background="#10B981" CornerRadius="10" Width="40" Height="40" Margin="0,0,15,0">
                        <TextBlock Text="⚡" FontSize="20" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- 时间显示 -->
                    <TextBlock Text="{Binding CurrentTime}" FontSize="18" FontWeight="SemiBold"
                               Foreground="#E5E7EB" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <!-- 分隔线 -->
                    <Border Width="1" Height="30" Background="#374151" Margin="0,0,20,0"/>

                    <!-- 系统标题 -->
                    <TextBlock Text="分布式能源管理系统" FontSize="16" FontWeight="SemiBold"
                               Foreground="#10B981" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 右侧状态图标组 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,30,0">
                    <!-- 系统通知 -->
                    <Grid Margin="5,0">
                        <Button Style="{StaticResource StatusButtonStyle}" ToolTip="系统通知">
                            <ContentControl Content="{StaticResource NotificationIcon}"/>
                        </Button>
                        <!-- 未读消息数 -->
                        <Border Background="#EF4444" CornerRadius="8" Padding="3,1"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Margin="22,0,0,0" Width="18" Height="18">
                            <TextBlock Text="3" FontSize="9" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- 分隔线 -->
                    <Border Width="1" Height="30" Background="#374151" Margin="10,0"/>

                    <!-- 网络连接 -->
                    <Button Style="{StaticResource StatusButtonStyle}" ToolTip="网络连接" Margin="5,0">
                        <ContentControl Content="{StaticResource NetworkIcon}"/>
                    </Button>

                    <!-- 蓝牙设置 -->
                    <Button Style="{StaticResource StatusButtonStyle}" ToolTip="蓝牙设置" Margin="5,0">
                        <ContentControl Content="{StaticResource BluetoothIcon}"/>
                    </Button>

                    <!-- 报警声音 -->
                    <Grid Margin="5,0">
                        <Button Style="{StaticResource StatusButtonStyle}" ToolTip="报警声音">
                            <ContentControl Content="{StaticResource AlarmSoundIcon}"/>
                        </Button>
                        <!-- 警告提示 -->
                        <Border Background="#F59E0B" CornerRadius="8" Padding="2,1"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Margin="22,0,0,0" Width="16" Height="16">
                            <TextBlock Text="!" FontSize="8" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- 分隔线 -->
                    <Border Width="1" Height="30" Background="#374151" Margin="10,0"/>

                    <!-- 运行状态 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <Border Style="{StaticResource StatusBreathingDot}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="运行中" FontSize="13" FontWeight="SemiBold"
                                   Foreground="#10B981" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 (第1行) - 页面导航容器 -->
        <Frame Name="MainContentFrame"
                Grid.Row="1"
                Background="Transparent"
                NavigationUIVisibility="Hidden">

            <!-- Frame样式 -->
            <Frame.Style>
                <Style TargetType="Frame">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </Frame.Style>
        </Frame>

        <!-- 底部导航栏 (第2行) -->
        <Border Grid.Row="2" Style="{StaticResource NavigationGlassStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 顶部高光线 -->
                <Border Grid.ColumnSpan="5" Height="1" VerticalAlignment="Top"
                        Background="#60FFFFFF" Margin="20,0,20,0"/>

                <!-- 系统总览按钮 -->
                <Button Grid.Column="0" Name="HomeButton" Click="NavButton_Click" Tag="Home"
                        Style="{StaticResource ActiveNavButtonStyle}" Margin="15,10,5,10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource HomeIcon}" Width="24" Height="24"/>
                        <TextBlock Text="系统总览" FontSize="11" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

                <!-- 数据分析按钮 -->
                <Button Grid.Column="1" Name="DataAnalysisButton" Click="NavButton_Click" Tag="DataAnalysis"
                        Style="{StaticResource NavButtonStyle}" Margin="5,10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource DataAnalysisIcon}" Width="24" Height="24"/>
                        <TextBlock Text="数据分析" FontSize="11" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

                <!-- 系统设置按钮 -->
                <Button Grid.Column="2" Name="SettingsButton" Click="NavButton_Click" Tag="Settings"
                        Style="{StaticResource NavButtonStyle}" Margin="5,10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource SettingsIcon}" Width="24" Height="24"/>
                        <TextBlock Text="系统设置" FontSize="11" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

                <!-- 运行记录按钮 -->
                <Button Grid.Column="3" Name="RunRecordsButton" Click="NavButton_Click" Tag="RunRecords"
                        Style="{StaticResource NavButtonStyle}" Margin="5,10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource RunRecordsIcon}" Width="24" Height="24"/>
                        <TextBlock Text="运行记录" FontSize="11" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

                <!-- 帮助中心按钮 -->
                <Button Grid.Column="4" Name="HelpButton" Click="NavButton_Click" Tag="Help"
                        Style="{StaticResource NavButtonStyle}" Margin="5,10,15,10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource HelpIcon}" Width="24" Height="24"/>
                        <TextBlock Text="帮助中心" FontSize="11" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
